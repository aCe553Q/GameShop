@model GameDisplayModel
@{
    
}
<div class="my-2">
  <form asp-action="Index" class="row row-cols-lg-auto g-3 align-items-center">
  <div class="col-12">
  </div>
    <div class="col-12">
    <label class="visually-hidden" for="inlineFormSelectPref">Kategoria</label>
    <select class="form-select" id="genreId" name="genreId">
      <option selected>Wybierz...</option>
      @foreach(var genre in Model.Genres)
                {
                    <option value="@genre.Id">@genre.GenreName</option>
                } 
    </select>
  </div>
  <div class=" ="col-12">
      <label class="visually-hidden" for="inlineFormInputGroupUsername">Szukaj po tytule</label>
        <div class="input-group">
            <div class="input-group-text"></div>
            <input type="text" class="form-control" id="sterm" name="sterm" placeholder="Szukaj po tytule" </input>
        </div>


    </div>

  <div class="col-12">
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</form>


</div>



<div class="w-100 mt-10 d-flex flex-wrap">
    @foreach (var game in Model.Games)
    {
        <div class="card mx-2 mb-4" style="width: 18rem;">
            @if(string.IsNullOrEmpty(game.Image))
            {
                <img src="~/css/img/noimg.jpg" class="card-img-top" alt="...">
            }
            else
            {
                <img src="/img/@game.Image" class="card-img-top" alt="...">
            }
        <div class="card-body">
        <h5 class="card-title">@game.GameName</h5>
        <p class="card-text">
        Gatunek: @game.GenreName <br />
        Autor: @game.AuthorName <br />
        Cena: @game.Price PLN
        </p>
        <a href="#" class="btn btn-primary">Dodaj do koszyka</a>
    </div>
</div>
    }
</div>
